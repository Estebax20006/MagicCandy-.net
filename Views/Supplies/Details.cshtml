@model MagicCandy.Models.Supply

@{
    ViewData["Title"] = "Details";
}

<style>
    .centered-form {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh; /* Esto centra verticalmente el formulario en la pantalla */
        background-color: #f0f8ff; /* Fondo azul clarito */
    }

    .form-container {
        width: 500px; /* Ancho del contenedor del formulario */
    }

    .form-box {
        background-color: #f9f9f9;
        border: 1px solid #ddd;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
    }

    .btn-back {
        background-color: #28a745; /* Color verde para el botón */
        color: #fff;
        font-size: 20px; /* Tamaño de fuente más grande */
        padding: 10px 20px; /* Padding del botón */
        border-radius: 8px;
        border: none;
        text-decoration: none;
    }

    .center-button {
        text-align: center;
    }

    .details-container {
        max-width: 500px;
        margin: auto;
        padding: 30px;
        background-color: #f9f9f9;
        border: 1px solid #ddd;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
    }

    .details-title {
        text-align: center;
        margin-bottom: 20px;
    }

    .details-list dt {
        font-weight: bold;
        margin-top: 10px;
    }

    .details-list dd {
        margin-top: 10px;
    }

    .details-actions {
        text-align: center;
        margin-top: 20px;
    }
</style>

<div class="centered-form">
    <div class="details-container">
        <h1 class="details-title">Details</h1>
        <div>
            <h4>Supply</h4>
            <hr />
            <dl class="details-list row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Quantity)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Quantity)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Category)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Category)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Unit)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Unit)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
            </dl>
        </div>
        <div class="details-actions">
            <a asp-action="Edit" asp-route-id="@Model?.Pkid" class="btn btn-primary">Edit</a> |
            <a asp-action="Index" class="btn btn-back">Back to List</a>
        </div>
    </div>
</div>
