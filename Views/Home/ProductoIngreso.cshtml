    <section class="form-production" style="margin-top: 10%;">

        <label for="produccio-num">Registro de Producto</label><br><br><hr><br>

        <form action="#" method="POST" enctype="multipart/form-data">

            <!-- PRODUCTO -->
            <label for="pkid_producto">ID del producto:</label>
            <input type="text" id="producto" style="font-size: large;" name="pkid_producto" pattern="\d{7,13}" title="El ID del producto debe contener entre 7 y 13 números." required>

            <!-- NOMBRE PRODUCTO -->
            <label for="nombre_producto" style="margin-left: 15%;">Nombre del producto:</label>
            <input type="text" id="nombre" style="font-size: large;" name="nombre_producto" pattern="[a-zA-Z\s]+" title="El nombre solo debe contener letras y espacios." required><br><br>

            <!-- CATEGORIA -->
            <label for="categoria" style="font-size: large;">Categoría:</label>
            <select name="categoria" id="categoria" style="font-size: large;">
                <option value="gomas">Gomas</option>
                <option value="refrescos">Refrescos</option>
                <option value="acidos">Ácidos</option>
                <option value="chocolates">Chocolates</option>
            </select>

            <!-- PRECIO UNITARIO -->
            <label for="precio_unidad" style="margin-left: 30.5%;">Precio Unitario:</label>
            <input type="text" name="precio_unidad" id="precio" style="font-size: large;" pattern="^(?!0)\d+(\.\d{1,2})?$" title="Ingrese un número positivo o decimal. No debe comenzar con cero." required><br><br>

            <!-- CANTIDADES -->
            <label for="cantidad_producto">Cantidades:</label>
            <input type="number" name="cantidad_producto" id="cantidad" style="font-size: large;" required min="1" step="1">

            <!-- IMAGEN DEL PRODUCTO -->
            <label for="imagen_producto" style="margin-left: 18.5%;">Imagen del producto:</label><br><br>
            <input type="file" name="imagen_producto" id="imagen" class="btn-archive" style="margin-left: 54%;"><br><br>

            <!-- BOTON PARA CREAR PRODUCCION -->
            <button type="submit" class="btn-crearPro" name="guardarProducto">Registrar producto ✔</button>
            <a href="Ingreso.html"><button type="button" class="btn-cancelarPro">Cancelar registro ✖</button></a>

        </form>




