@model MagicCandy.Models.Product

@{
    ViewData["Title"] = "Delete";
}

<style>
    .centered-form {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh; /* Esto centra verticalmente el formulario en la pantalla */
        background-color: #f0f8ff; /* Fondo azul clarito */
    }

    .delete-container {
        width: 500px; /* Ancho del contenedor de eliminación */
    }

    .delete-box {
        background-color: #f9f9f9;
        border: 1px solid #ddd;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
    }

    .btn-delete {
        background-color: #dc3545; /* Color rojo para el botón de eliminación */
        color: #fff;
        font-size: 20px; /* Tamaño de fuente más grande */
        padding: 10px 20px; /* Padding del botón */
        border-radius: 8px;
        border: none;
        text-decoration: none;
    }

    .btn-back {
        background-color: #28a745; /* Color verde para el botón de retroceso */
        color: #fff;
        font-size: 20px; /* Tamaño de fuente más grande */
        padding: 10px 20px; /* Padding del botón */
        border-radius: 8px;
        border: none;
        text-decoration: none;
    }
</style>

<div class="centered-form">
    <div class="delete-container">
        <div class="delete-box">
            <div>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Quantity)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Quantity)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.UnitPrice)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UnitPrice)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Category)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Category)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ProductImage)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ProductImage)
                    </dd>
                </dl>
            </div>
            <div>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Pkid" />
                    <input type="submit" value="Delete" class="btn btn-delete" /> |
                    <a asp-action="Index" class="btn btn-back">Listado</a>
                </form>
            </div>
        </div>
    </div>
</div>
